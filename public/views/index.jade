extends ./base

block title
    title This is our blog

block content
    h2 #{params.sam}

    form(method="post", action="/savepost")
        div.input
            input(type="text", name="blogtitle")
        div.input
            span.label Post
            textarea(name="blogpost", cols="40", rows="5")
        div.actions
            input(class="ui button primary", type="submit", value="submit")

    div(ng-controller='TestController')
        [[testMessage]]

    a(class="ui primary basic button", href='/blogposts') See all blog posts