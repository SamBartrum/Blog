include ../mixins/modalmixins


center
    h2 Create a new blog post
    br

    div(class="ui form")

        div(class="field")
            input(type="text", name="blogtitle", placeholder="Blog post title", ng-model="npCtrl.newblogpost.blogtitle")

        div(class="field")
            textarea(name="blogpost", cols="40", rows="30", placeholder="Blog post", ng-model="npCtrl.newblogpost.blogpost")
    br
    div(class="ui input")
        button(class="ui button primary", ng-click="npCtrl.saveBlogPost()") Submit


mixin successModal()
